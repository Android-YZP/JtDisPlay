<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:context=".activitys.CostActivity">

    <View
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_weight="2"
        android:background="@color/bg_data"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_lantong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="南通转运城市单方成本"
            android:textColor="@color/grey_2"
            android:textSize="@dimen/font15" />

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lrv_lantong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_lantong"
            android:background="@color/bg_data" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_lantong"
            android:background="@color/text_background" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_lantong"
            android:background="@color/text_background" />

    </RelativeLayout>


    <View
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_weight="2"
        android:background="@color/bg_data"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他转运城市单方成本"
            android:textColor="@color/grey_2"
            android:textSize="@dimen/font15" />

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lrv_other"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_other"
            android:background="@color/bg_data" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_other"
            android:background="@color/text_background" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_other"
            android:background="@color/text_background" />

    </RelativeLayout>


    <View
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent"
        android:background="@color/bg_color" />


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_weight="6"
        android:background="@color/bg_data"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top10客户成本"
            android:textColor="@color/grey_2"
            android:textSize="@dimen/font15" />

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lrv_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_top"
            android:background="@color/bg_data" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_top"
            android:background="@color/text_background" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_top"
            android:background="@color/text_background" />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent"
        android:background="@color/bg_color" />

</LinearLayout>